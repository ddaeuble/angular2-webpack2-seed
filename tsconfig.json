{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitReturns": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "lib": [ // fix TypeScript errors like "cannot find name 'Promise'"
            "dom",
            "es2015"
        ]
    },
    "files": [
        "src/custom-typings.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/",
        "dist/"
    ],
    "compileOnSave": false,
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true
    }
}